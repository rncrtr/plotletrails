<h1>Listing cards</h1>

<table>
  <tr>
    <th>Col</th>
    <th>Text</th>
    <th>Color</th>
    <th>Ord</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.col_id %></td>
    <td><%= card.text %></td>
    <td><%= card.color_id %></td>
    <td><%= card.ord %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

